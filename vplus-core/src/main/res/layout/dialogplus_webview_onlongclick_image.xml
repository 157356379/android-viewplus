<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/dialogplus_webview_save_to_album"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/pop_custom_selector"
        android:text="保存到相册"
        android:textColor="#3F4450"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F4F4F4" />

    <Button
        android:id="@+id/dialogplus_webview_share"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/pop_custom_selector"
        android:text="分享"
        android:textColor="#3F4450"
        android:textSize="18sp"
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#F4F4F4" />

    <Button
        android:id="@+id/dialogplus_webview_view"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/pop_custom_selector"
        android:text="查看"
        android:textColor="#3F4450"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F4F4F4" />

    <Button
        android:id="@+id/dialogplus_webview_cancel"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/pop_custom_selector"
        android:text="@string/cancel"
        android:textColor="#3F4450"
        android:textSize="18sp" />
</LinearLayout>
